#! /bin/sh

xrandr --output eDP1 --mode 2560x1440
~/.config/polybar/launch.sh & 
sxhkd &
flameshot &
dropbox &
picom &
copyq &
nm-applet &
dunst &
udiskie &
redshift &
nitrogen --restore &

bspc monitor -d terminal browser editor slack V VI VII VIII IX X

bspc config border_width         2
bspc config window_gap          20

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Slack desktop='^4'
bspc rule -a firefoxdeveloperedition desktop='^2'
bspc rule -a Peek state=floating

sleep 3
xrandr --output HDMI2 --same-as eDP1
sleep 1
nitrogen --restore &
